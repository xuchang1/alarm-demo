<configuration>

    <include resource="classpath:logback1.xml"/>

    <!-- 定义一个控制台输出的appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 定义一个文件输出的appender，用于默认日志 -->
    <appender name="ALARM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/alarm.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 每天生成一个新的日志文件 -->
            <fileNamePattern>logs/alarm-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 定义一个文件输出的appender，用于指定日志 -->
<!--    <appender name="METRIC_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">-->
<!--        <file>logs/metric.log</file>-->
