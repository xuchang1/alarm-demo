<!--            &lt;!&ndash; 每天生成一个新的日志文件 &ndash;&gt;-->
<!--            <fileNamePattern>logs/metric-%d{yyyy-MM-dd}.log</fileNamePattern>-->
<!--            <maxHistory>30</maxHistory>-->
<!--        </rollingPolicy>-->
